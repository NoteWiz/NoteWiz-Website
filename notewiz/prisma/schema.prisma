generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(cuid()) @map("_id")
  username      String?
  password      String?
  email         String?        @unique
  emailVerified DateTime?
  image         String?
  flashcardsets FlashcardSet[]
  chatbots    Chatbot[]
  QuizSet       QuizSet[]
}

model FlashcardSet {
  id         String      @id @default(cuid()) @map("_id")
  userId     String
  user       User        @relation(fields: [userId], references: [id])
  prompt     String
  createdAt  DateTime
  flashcards Flashcard[]
}

model Flashcard {
  id             String        @id @default(cuid()) @map("_id")
  flashcardSet   FlashcardSet? @relation(fields: [flashcardSetId], references: [id])
  flashcardSetId String
  topic          String
  front          String
  back           String
}

model Chatbot {
  id        String    @id @default(cuid()) @map("_id")
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
 chatThreads ChatThread[]
}
model ChatThread {

  id         String   @id @default(cuid()) @map("_id")
  title      String
  chatbotId  String
  chatbot    Chatbot  @relation(fields: [chatbotId], references: [id])
  chats      Chat[]

}
model Chat{
  id        String   @id @default(cuid()) @map("_id")
  chatThread   ChatThread  @relation(fields: [chatThreadId], references: [id])
  chatThreadId String
  createdAt DateTime @default(now())
  title     String?
  role      String
  content   String

}

model QuizSet {
  id            String   @id @default(cuid()) @map("_id")
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  prompt        String
  createdAt     DateTime
  score        Float?
  difficulty   String?
  quizQuestions Question[]
  quizResponse  QuizResponse[]
}

model Question {
  id           String   @id @default(cuid()) @map("_id")
  quizSet      QuizSet? @relation(fields: [quizSetId], references: [id])
  quizSetId    String
  prompt       String
  questionType String
  question     String
  correctAnswer String //for mcq questions //for mcq questions
  options         Json?     // for mcq questions // for true_false questions   // to check if user's answer is correct
  userAnswer   String
}
model QuizResponse{
  id          String @id @default(cuid()) @map("_id")
  quizSetId      String
  quizSet      QuizSet? @relation(fields: [quizSetId], references: [id])
  userAnswer    String
  score         String
}

